{
    "version": 2,
    "builds": [
      { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" }
    ],
    "functions": {
      "api/users/index.js": {
        "runtime": "vercel-nodejs@18.x"
      },
      "api/users/[id].js": {
        "runtime": "vercel-nodejs@18.x"
      }
    },
    "env": {
      "DB_HOST": "@db_host",
      "DB_USER": "@db_user",
      "DB_PASSWORD": "@db_password",
      "DB_NAME": "@db_name"
    }
  }